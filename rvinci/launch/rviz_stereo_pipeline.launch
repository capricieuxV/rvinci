<!-- -*- mode: XML -*- -->

<!-- Launch stereo camera pipeline for Decklink SDI capture -->
<launch>

  <!-- Make sure left/right are correct -->
  <arg name="left_cam_device" default="1"/>
  <arg name="right_cam_device" default="0"/>

  <!-- Arbitrary transform as an example, just need to publish to "/$(arg rig_name)_stereo_frame" -->
  <node ns="$(arg rig_name)" name="stereo_transform" pkg="tf" type="static_transform_publisher" args="0 0 -1 0 0 0 /world /$(arg rig_name)_stereo_frame 10"/>
  
  <!-- left camera driver node -->
  <include file="$(find rvinci)/launch/gscam_stereo_single.launch" ns="$(arg rig_name)">
    <arg name="camera_name" value="left"/>
    <arg name="camera_info_url" value="package://dvrk_config/$(arg rig_name)/left_camera_parameters.yaml"/>
    <arg name="device" value="$(arg left_cam_device)"/>
    <arg name="frame_id" value="$(arg rig_name)_stereo_frame"/>
  </include>

  <!-- camera driver node -->
  <include file="$(find rvinci)/launch/gscam_stereo_single.launch" ns="$(arg rig_name)">
    <arg name="camera_name" value="right"/>
    <arg name="camera_info_url" value="package://dvrk_config/$(arg rig_name)/right_camera_parameters.yaml"/>
    <arg name="device" value="$(arg right_cam_device)"/>
    <arg name="frame_id" value="$(arg rig_name)_stereo_frame"/>
  </include>

  <node ns="$(arg rig_name)" name="$(arg rig_name)_stereo_proc" pkg="stereo_image_proc" type="stereo_image_proc">
    <param name="_approximate_sync" value="True"/>
  </node>

  <node pkg="nodelet" type="nodelet" name="$(arg rig_name)_left_resize" args="standalone image_proc/resize">
    <param name="width" type="int" value="1280"/>
    <param name="height" type="int" value="1024"/>
    <param name="image" value="$(arg rig_name)/left/image_rect_color"/>
    <param name="camera_info" value="$(arg rig_name)/left/camera_info"/>
  </node>

  <node pkg="nodelet" type="nodelet" name="$(arg rig_name)_right_resize" args="standalone image_proc/resize">
    <param name="width" type="int" value="1280"/>
    <param name="height" type="int" value="1024"/>
    <param name="image" value="$(arg rig_name)/right/image_rect_color"/>
    <param name="camera_info" value="$(arg rig_name)/right/camera_info"/>
  </node>

</launch>
